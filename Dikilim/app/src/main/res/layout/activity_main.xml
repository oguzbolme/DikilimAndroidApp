<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <GridLayout
        android:rowCount="4"
        android:columnCount="2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/button_top_home_1"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/bus"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Otobüs Saatleri"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_top_home_2"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/pharmacy"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Nöbetçi Eczaneler"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_top_home_3"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/teacher"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Özel Ders Hocaları"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_top_home_4"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/plumber"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Tesisat Ustaları"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_top_home_5"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/news"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Haber ve Duyuru"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_top_home_6"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/taxi"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Taksiler"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_top_home_7"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/beach"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Gezilecek Yerler"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_top_home_8"
            android:layout_margin="10dp"
            android:background="@drawable/button_frame_top"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/cafe"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Kafeler"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/button_bottom_home_1"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/button_frame_bottom"
            android:src="@drawable/help"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:selectableItemBackground"/>

        <ImageView
            android:id="@+id/button_bottom_home_2"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/button_frame_bottom"
            android:src="@drawable/house"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:selectableItemBackground"/>

        <ImageView
            android:id="@+id/button_bottom_home_3"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/button_frame_bottom"
            android:src="@drawable/share"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>