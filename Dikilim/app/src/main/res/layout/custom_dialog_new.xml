<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:background="@android:color/holo_orange_light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="250dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_new_detail_date"
                android:fontFamily="serif"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Haber Tarihi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_new_detail_title"
                android:fontFamily="serif"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Haber Başlığı"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_new_detail_content"
                android:fontFamily="serif"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Haber İçeriği"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textview_new_detail_author"
                android:fontFamily="serif"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Haber Yazarı"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/button_new_detail_back"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@android:color/holo_blue_light"
                android:textAllCaps="false"
                android:text="Geri"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>